# ==========================================
# Про.Маркируй - Backend Environment Variables
# ==========================================
# Скопируйте этот файл в .env и заполните значения

# ==========================================
# JWT AUTHENTICATION
# ==========================================
# КРИТИЧНО! Сгенерируйте надёжный секретный ключ:
# python3 -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your-super-secret-key-here

# ==========================================
# SMTP EMAIL (Beget)
# ==========================================
SMTP_HOST=smtp.beget.com
SMTP_PORT=465
SMTP_USER=info@promarkirui.ru
SMTP_PASSWORD=your-smtp-password-here
SMTP_FROM=info@promarkirui.ru
SMTP_FROM_NAME=Про.Маркируй
SMTP_USE_TLS=false

# ==========================================
# SITE URL
# ==========================================
SITE_URL=https://promarkirui.ru

# ==========================================
# DADATA API (для поиска компаний по ИНН)
# ==========================================
DADATA_API_KEY=your-dadata-api-key
DADATA_SECRET_KEY=your-dadata-secret-key

# ==========================================
# CONTACT EMAILS (через запятую)
# ==========================================
CONTACT_TO_EMAIL=admin@promarkirui.ru

# ==========================================
# OPENAI (для AI чат-бота)
# ==========================================
OPENAI_API_KEY=sk-your-openai-api-key

# ==========================================
# CHATKIT (workflow ID)
# ==========================================
CHATKIT_WORKFLOW_ID=wf_your-workflow-id

# ==========================================
# MONGODB (для ТНВЭД парсера)
# ==========================================
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=promarkirui
